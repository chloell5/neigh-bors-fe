    <p>
      Name: <%= @farm.name %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-2">
  </div>
  <div class="col-2">
    <p>
      Address: <%= @farm.address %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-2">
  </div>
  <div class="col-2">
    <p>
      Phone #: <%= @user.phone %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-2">
  </div>
  <div class="col-2">
    <p>
      Email: <%= @user.email %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-2">
  </div>
  <div class="col-2">
    <p>
      Number of Horses: <%= @farm.animals %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-2">
  </div>
  <div class="col-2">
    <p>
      Trailer Carrying Capacity: <%= @user.trailer_capacity %>
    </p>
  </div>
</div>
<br>
<br>

<div class="row">
  <div class="col-3">
  </div>
  <div class="col-2">
    <%= button_to 'Edit', '/farms/edit', method: :get %>
  </div>
</div>
</div>
</div>
