<div class="container">
  <h1 class="text-center">Tell us about yourself</h1>
  <br>
  <br>

  <%= form_with url: '/users', method: :patch do |form| %>
    <div class="row">
      <div class="col-1">
      </div>
      <div class="col-2">
        <%= form.label :name, "Name:" %>
      </div>
      <div class="col-2">
        <%= form.text_field :name %>
      </div>
      <div class="col-1">
      </div>
      <div class="col-2">
        <%= form.label :address, "Address:" %>
      </div>
      <div class="col-2">
        <%= form.text_field :address %>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-1">
      </div>
      <div class="col-2">
        <%= form.label :phone, "Phone Number:" %>
      </div>
      <div class="col-2">
        <%= form.telephone_field :phone %>
      </div>
      <div class="col-1">
      </div>
      <div class="col-2">
        <%= form.label :trailer_capacity, "How many horses can you rescue if any (trailer capacity)?:" %>
      </div>
      <div class="col-2">
        <%= form.number_field :trailer_capacity %>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-1">
      </div>
      <div class="col-2">
        <%= form.label :available_for_missions?, "Are you available to be assigned evacauation missions?" %>
      </div>
      <div class="col-2">
        <%= form.radio_button :available_for_missions?, true %>Yes &nbsp;
        <%= form.radio_button :available_for_missions?, false %>No

    </div>
    <br>

    <div class="row">
      <div class="col-6">
      </div>
      <div class="col-1">
        <%= form.submit "Register" %>
      </div>
    </div>
  <% end %>
</div>
