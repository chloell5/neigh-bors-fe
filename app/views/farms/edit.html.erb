<div class="container">
  <h1 class="text-center"><%= @farm.name %>'s Edit</h1>
  <br>
  <br>

  <%= form_with url: '/farms', method: :patch do |form| %>
    <div class="row">
      <div class="col-1">
      </div>
      <div class="col-2">
        <%= form.label :name, "Name:" %>
      </div>
      <div class="col-2">
        <%= form.text_field :name, value: @farm.name %>
      </div>
      <div class="col-1">
      </div>
      <div class="col-2">
        <%= form.label :address, "Address:" %>
      </div>
      <div class="col-2">
        <%= form.text_field :address, value: @farm.address %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-1">
      </div>
      <div class="col-2">
        <%= form.label :number_of_animals, "Number of horses:" %>
      </div>
      <div class="col-2">
        <%= form.number_field :number_of_animals, value: @farm.animals %>
      </div>
      <div class="col-1">
      </div>
      <div class="col-2">
        <%= form.label :special_needs?, "Special Needs?" %>
      </div>
      <div class="col-2">
        <%= form.radio_button :special_needs?, true %>Yes &nbsp;
        <%= form.radio_button :special_needs?, false %>No
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-1">
      </div>

      <div class="col-1">
      </div>
      <div class="col-2">
        <%= form.label :special_needs_details, "If yes, please specify:" %>
      </div>
      <div class="col-2">
        <%= form.text_field :special_needs_details, value: @farm.special_needs_details %>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-6">
      </div>
      <div class="col-1">
        <%= form.submit "Submit" %>
      </div>
    </div>
  <% end %>
</div>
